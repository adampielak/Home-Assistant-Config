---

# Office 365 Integration for Home Assistant

# https://github.com/PTST/O365-HomeAssistant

o365:
  client_secret: !secret azure_james_client_secret
  client_id: !secret azure_james_client_id
  email_sensor:
    - name: inbox
      max_items: 2
  query_sensors:
    - name: "HA Notifications"
      folder: "Inbox/HA_Inbox"
      from: !secret email1
      subject_contains: "Notifcation from home assistant"
      has_attachment: True
      max_items: 2
      is_unread: True